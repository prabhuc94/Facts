<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeaderText">
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textSize">@dimen/_25sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/indigo_A700</item>
    </style>

    <style name="SubHeaderText">
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/grey_800</item>
    </style>

    <style name="DescriptionText">
        <item name="fontFamily">sans-serif-condensed-light</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">@color/grey_700</item>
    </style>

</resources>